{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>

{{/each}}

<div class="p-5 rounded-lg m-3" style="background: #E9ECEF;">
    <h1 class="display-4">Bem vindo ao Blog do Node</h1>
    <p class="lead">Esse é um BLOG simples, desenvolvido com Node.js + Express + MongoDB</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="/usuarios/registro" role="button">Crie uma conta</a>
</div>
<hr class="my-4">
<h2 class="p-3">Postagens recentes:</h2>


{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>{{categoria.nome}}</small> <br>
            <small>Data de publicação: {{date}}</small>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}